generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Event {
  id          String     @id @default(uuid())
  name        String
  location    String
  start_date  DateTime
  end_date    DateTime
  seats       Int
  organizer   String
  price       Float
  description String
  created_at  DateTime   @default(now())
  vouchers    Voucher[]
  reviews     Review[]
}

model Voucher {
  id           String   @id @default(uuid())
  discount     Float
  name         String
  event        Event    @relation(fields: [event_id], references: [id])
  event_id     String
  expiry_date  DateTime
  code         String   @unique
  max_usage    Int
  current_usage Int
}

model Review {
  id        String   @id @default(uuid())
  user      Users    @relation(fields: [user_id], references: [id])
  user_id   String
  event     Event    @relation(fields: [event_id], references: [id])
  event_id  String
  message   String
  rating    Int
  created_at DateTime @default(now())
}

model Coupon {
  id            String  @id @default(uuid())
  discount      Float
  name          String
  expiry_date   DateTime
  code          String  @unique
  max_usage     Int
  current_usage Int
}

model Users {
  id            String        @id @default(uuid())
  first_name    String
  last_name     String
  roleId        Int     @default(1)
  role          Role    @relation(fields: [roleId], references: [id])
  //enum atau model
  profile_picture String?
  password      String
  email         String        @unique
  referral_code String?
  user_points   Int
  expiry_points Int
  transactions  Transaction[]
  reviews       Review[]
}

model Transaction {
  id            String    @id @default(uuid())
  status        String
  payment_date  DateTime
  user          Users     @relation(fields: [user_id], references: [id])
  user_id       String
  total_amount  Float
  payment_method String
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  user User[]
}